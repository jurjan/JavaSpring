<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coursework.courseprojectfxeng.fxControllers.ProductReview">
    <children>
        <ListView fx:id="productListField" layoutX="14.0" layoutY="20.0" onMouseClicked="#loadReviews" prefHeight="364.0" prefWidth="205.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#previewProduct" text="Preview product" />
                        <MenuItem mnemonicParsing="false" onAction="#addReview" text="Add review" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
        <TreeView fx:id="commentTreeField" layoutX="251.0" layoutY="20.0" prefHeight="238.0" prefWidth="332.0">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" text="update comment" onAction="#updateComment"/>
                <MenuItem mnemonicParsing="false" text="reply" onAction="#reply"/>
                <MenuItem mnemonicParsing="false" text="delete" onAction="#delete"/>
              </items>
            </ContextMenu>
         </contextMenu></TreeView>
        <Button layoutX="251.0" layoutY="274.0" mnemonicParsing="false" text="Add" />
        <Button layoutX="383.0" layoutY="274.0" mnemonicParsing="false" text="Button" />
        <Button layoutX="531.0" layoutY="274.0" mnemonicParsing="false" text="Button" />
    </children>
</AnchorPane>
